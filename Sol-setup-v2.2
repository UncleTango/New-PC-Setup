@echo off

REM Download and install fonts
echo Downloading and installing fonts...
curl -L -o Fonts.zip https://github.com/UncleTango/New-PC-Setup/releases/download/v1.0/Fonts.zip
powershell Expand-Archive Fonts.zip -DestinationPath "C:\Windows\Fonts"

REM Download and install Chrome
echo Downloading and installing Google Chrome...
curl -L -o ChromeSetup.exe "https://dl.google.com/chrome/install/standalone/GoogleChromeStandaloneEnterprise64.msi"
msiexec /i ChromeSetup.exe /quiet /qn /norestart

REM Download and install Teams
echo Downloading and installing Microsoft Teams...
curl -L -o TeamsSetup.exe "https://aka.ms/teams64bitmsi"
msiexec /i TeamsSetup.exe /quiet /qn /norestart

REM Download and install DisplayLink drivers
echo Downloading and installing DisplayLink drivers...
curl -L -o DisplayLinkSetup.exe "https://github.com/UncleTango/New-PC-Setup/releases/download/v1.0/DisplayLink.USB.Graphics.Software.for.Windows11.0.M0-EXE.exe"
start "" /wait DisplayLinkSetup.exe /S

REM Download and install printer program
echo Downloading and installing printer program...
curl -L -o PrinterSetup.exe "https://github.com/UncleTango/New-PC-Setup/releases/download/v1.0/upd-pcl6-x64-6.9.0.24630.exe"
start "" PrinterSetup.exe
